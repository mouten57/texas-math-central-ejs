<!DOCTYPE html>
<html>
  <head>
    <% include ../static/partials/head.ejs %>
  </head>

  <body>
    <% include ../static/partials/navbar.ejs %>

    <main class="container">
      <% include ../static/partials/messages.ejs %>

      <h1>New Resource</h1>

      <form
        action="/resources/create"
        method="post"
        enctype="multipart/form-data"
      >
        <div class="form-group">
          <label for="title">Resource Name</label>
          <input
            type="text"
            class="form-control"
            name="name"
            aria-describedby="nameHelp"
            placeholder="Enter name"
          />
        </div>
        <div class="form-group">
          <label for="body">Unit</label>
          <select label="unit" name="unit">
            <option value="boy" label="boy">Beginning of Year</option>
          </select>
        </div>
        <div class="form-group">
          <label for="body">Type</label>
          <select label="type" name="type">
            <option value="Google Doc" label="Google Doc">Google Doc</option>
          </select>
        </div>
        <div class="form-group">
          <label for="body">Link</label>
          <input
            type="text"
            class="form-control"
            name="link"
            value="http://"
            aria-describedby="linkHelp"
          />
        </div>
        <div class="form-group">
          <label for="body">Description</label>
          <textarea
            name="description"
            class="form-control"
            aria-describedby="descriptionHelp"
            placeholder="Enter description"
          ></textarea>
        </div>
        <div>
          <label>
            Upload File <small>(2MB maximum)</small>
            <div><input type="file" name="file" /></div>
          </label>
        </div>

        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
    </main>

    <% include ../static/partials/baseScripts.ejs %>
  </body>
</html>
