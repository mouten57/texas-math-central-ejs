<!DOCTYPE html>
<html lang="en">
  <head>
    <% include ../static/partials/head.ejs %>
  </head>

  <body>
    <% include ../static/partials/navbar.ejs %>
    <!-- Page Content -->
    <main class="container">
      <% include ../static/partials/messages.ejs %>

      <!-- Jumbotron Header -->
      <header class="jumbotron my-4">
        <h1 class="display-5">
          <%= `${result.user.nickname}'s profile page` %>
        </h1>

        <% console.log(result) %>
        <p>
          Am I logged in?....
          <strong>
            <%= (typeof currentUser !== 'undefined') ? "YES" : "NO" %></strong
          >
        </p>
      </header>

      <!-- Page Features -->

      <hr />
      <h3>Latest Resources</h3>

      <ul class="list-unstyled">
        <% if(result.resources) { %> <% result.resources.forEach((resource) => {
        %>

        <li>
          <a href="/units/<%= resource.unit %>/<%= resource._id %>">
            <%= resource.name %>
          </a>
        </li>
        <% }) %> <% } %>
      </ul>
      <hr />
      <h3>Latest Comments</h3>
      <ul class="list-unstyled">
        <% if(result.comments) { %> <% result.comments.forEach((comment) => { %>
        <li>
          <span>Resource: </span>
            <%= comment.body %>
          </a>
          <p>Comment: <%= comment.body %></p>
        </li>
        <hr />
        <% }) %> <% } %>
      </ul>

      <!-- /.row -->
    </main>
    <!-- /.container -->
    <% include ../static/partials/baseScripts.ejs %>
  </body>
</html>
